---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../consts';
---

<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<style>
			h1 {
        text-align: center;
      }
		</style>
	</head>

	<body>
		<Header />
		<main>
			<h1>404</h1>
      <p>Sorry! That page does not exist. It may have been removed or moved to a new section on the site. <a href="/">Click here</a> go back to the home page.</p>
		</main>
		<Footer />
	</body>
</html>
